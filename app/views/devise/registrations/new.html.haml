%h1.h3.mb-3.font-weight-normal.title{:style => "text-align: center"} Cadastre-se
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, label:false, autofocus: true, input_html: { autocomplete: "email" }, placeholder: "Email"
    = f.input :password, required: true, label:false,  hint: ("#{@minimum_password_length} caracteres m√≠nimos" if @minimum_password_length), input_html: { autocomplete: "new-password" }, placeholder: "Senha"
    = f.input :password_confirmation, label:false,  required: true, input_html: { autocomplete: "new-password" }, placeholder: "Confirmar senha"
  .form-actions
    = f.button :submit, "Cadastrar", class: 'btn btn-primary d-grid gap-2 col-12 mx-auto'
  %hr/
  = render "devise/shared/links"  

